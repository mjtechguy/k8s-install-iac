# Global Configuration
# --------------------
k8s_distro: "k3s"  # Choose between "k3s" or "rke2"

# Ansible Configuration
ansible_user: root  # Default user for SSH
ansible_become: true  # Enable privilege escalation
ansible_python_interpreter: /usr/bin/python3  # Path to Python interpreter
ansible_ssh_private_key_file: "~/.ssh/id_rsa"  # Path to SSH private key

# Kubernetes Versions
k3s_version: "v1.29.12+k3s1"  # K3s version to deploy
rke2_version: "v1.28.4+rke2r2"  # RKE2 version to deploy

# TLS and Certificates
tls_sans: "your-server-ip,www.example.com"  # Additional SANs for certificates
disable_traefik: "true"  # Disable default Traefik in K3s (set "true" to disable)
letsencrypt_email: "admin@example.com"  # Email for Let's Encrypt certificates
letsencrypt_env: "prod"  # Let's Encrypt environment ("prod" or "staging")
wildcard_cert: "false"  # Set to "true" to create a wildcard certificate

# Rancher Configuration
rancher_install: "false"  # Set to "true" to install Rancher
rancher_chart_version: "2.9.5"  # Rancher Helm chart version
rancher_hostname: "rancher.example.com"  # Rancher UI hostname
rancher_password: "admin"  # Rancher admin password
rancher_replicas: 1  # Number of Rancher replicas

# Optional Features
cert_reflector_install: "false"  # Set to "true" to install Reflector (automatic resource sync)

# K3s Configuration
# ------------------
k3s_version: "v1.29.12+k3s1"  # K3s version to deploy
k3s_kubeconfig_path: "/etc/rancher/k3s/k3s.yaml"  # Path to K3s kubeconfig
k3s_extra_server_args: "--disable servicelb --disable traefik"  # Additional server arguments
k3s_extra_agent_args: "--node-label topology.kubernetes.io/zone=us-east-1a"  # Additional agent arguments

